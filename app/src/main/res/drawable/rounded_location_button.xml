<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Shape -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="#6E6E6E"/> <!-- this one is the color of the Rounded Button -->
            <corners android:radius="10dp" /> <!-- Use a single radius for a fully rounded shape -->
        </shape>
    </item>

    <!-- Location Icon -->
    <item
        android:drawable="@drawable/baseline_my_location_24"
        android:gravity="center"
        android:width="25dp"
        android:height="25dp"
        />
</layer-list>
